<!--Main template -->
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tech Int Prep</title>
    <link
      rel="icon"
      href="../images/Tech_Int_Prep _logo.png"
      type="image/x-icon"
    />

    {{! Link to sweetalert2 }}
    <link
      href="//cdn.jsdelivr.net/npm/@sweetalert2/theme-dark@4/dark.css"
      rel="stylesheet"
    />
    {{! Link to Bootstrap }}
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ"
      crossorigin="anonymous"
    />
    {{! Link to highlight.js }}
    <link
      rel="stylesheet"
      href="//cdnjs.cloudflare.com/ajax/libs/highlight.js/11.6.0/styles/default.min.css"
    />
    {{! Link to custom css }}
    <link rel="stylesheet" href="/css/style.css" />
    {{! Link to fontawesome }}
    <script
      src="https://kit.fontawesome.com/e84ea757da.js"
      crossorigin="anonymous"
    ></script>
  </head>

  <body class="d-flex flex-column h-100">
    <!-- bootstrap navbar -->
    <nav class="navbar navbar-expand-lg navbar-custom">
      <div class="container-fluid justify-content-between no-pad-right">
        <h1>
          <a class="navbar-brand" href="/"><a class="navbar-brand" href="/"><img
                src="../images/Tech_Int_Prep _logo.png"
                width="100%"
                height="50"
                alt="App Logo"
              /></a>
          </a></h1>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div
          class="collapse navbar-collapse justify-content-end"
          id="navbarNav"
        >
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/" href="">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/aboutUs">About Us</a>
            </li>

            {{#if logged_in}}
              <li class="nav-item"><a
                  class="nav-link"
                  href="/dashboard"
                >Dashboard</a></li>
              <li class="nav-item"><a class="nav-link" href="/dashboard/new">Add
                  Question</a></li>
              <br />
              <a
                class="btn btn-success logout-btn log-btn"
                id="logout-link"
                href="#"
                role="button"
              >Log Out</a>
            {{else}}
              <br />
              <a
                class="btn btn-success login login-btn"
                href="/login"
                role="button"
              >Log In</a>
            {{/if}}
          </ul>
        </div>
      </div>
    </nav>
    <!-- bootstrap carousel for pictures/explanation -->
    <main class="wrapper">
      <div class="content">
        <br />
        {{{body}}}
      </div>
      {{!-- footer section --}}
       <footer class="footer">
        <div class="container">
          <div class="row">
            <div class="col-lg-5">
              <p class="mt-2" style="color:white; font-size: 18px;">&copy;
                {{2023}}
                Tech Int Prep Team. All rights reserved.</p>
            </div>
            <div class="col-lg-7">
              <div
                class="d-flex flex-lg-row flex-sm-column justify-content-lg-end p-2"
              >
               <a href="/aboutUs"> <button
                  class="btn btn-primary mx-2"
                >About</button></a>
                {{#if logged_in}}
                <a href="/dashboard"><button
                  class="btn btn-primary mx-2"
                >Dashboard</button></a>
                {{else}}
                <a href="/signup"><button
                  class="btn btn-primary mx-2"
                >Sign up</button></a>{{/if}}
                <button class="btn btn-success mx-2"><a
                    href="https://github.com/sonam-git/Tech_Int_Prep"
                    target="_blank"
                  ><i class="fa-brands fa-github fa-xl mx-2"></i></a></button>
              </div>
            </div>
          </div>
        </div>
      </footer>
    </main>

    {{! highlight }}
    <script
      src="//cdnjs.cloudflare.com/ajax/libs/highlight.js/11.6.0/highlight.min.js"
    ></script>
    <!-- cdn bootstrap -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-u1OknCvxWvY5kfmNBILK2hRnQC3Pr17a+RTT6rIHI7NnikvbZlHgTPOOmMi466C8"
      crossorigin="anonymous"
    ></script>
    <!-- cdn sweet alert -->
    <script
      src="//cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.js"
    ></script>

    <!-- apply syntax highlighting to code snippets on a web page using the "highlight.js" library. 
    hljs: It refers to the hljs object, which is a part of the "highlight.js" library. 
    This object provides various methods and properties for syntax highlighting.. -->

    <script>hljs.highlightAll();</script>
    <!-- Render script for logged in users only -->
    {{#if logged_in}}
      <script src="../js/logout.js"></script>
    {{/if}}

  </body>
</html>