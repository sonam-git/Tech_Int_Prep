{{! Display the post created by logged in user }}
<div class="container">
  <div class="card-header ">
   <h3 class="text-center p-2">Question And Answer Dashboard</h3></div>
   <br>
  {{#each posts}}
    <div class="row mx-auto">
      <div class="card">
        <br />
         <div class="card-header flex-row justify-space-between">
         <div>
          Posted by <strong>
          {{user.username}}</strong>
          on
          {{format_date createdAt}}
       </div>
        </div>
        <br />
        
        <h4> <span>Question: </span>{{title}}</h4>
        <br />
        <br />
        <p id="likesCount"> 👍 {{likes}} likes</p>
        <span>Answer: </span>
        <pre>
          <code class="language-js">
            {{body}}
          </code>
        </pre>
<div class="d-flex gap-2 mx-auto btn-dashboard">
        <a href="/dashboard/edit/{{id}}" class="btn btn-success btn-md " role="button" >Edit This Post 	
➜ ✍️ </a>  
<a href="/post/{{id}}" class="btn btn-success btn-md " role="button" >Comment This Post 	
➜ 💬</a>
</div>
<br>
      </div>
    </div>
    <br>
  {{/each}}
</div>
<br>
<br>
<script src="/js/like.js"></script>