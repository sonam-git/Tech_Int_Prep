<div class="col-lg-6 col-md-10 col-sm-6 my-5 rounded mx-auto d-block col border rounded p-4">
  <div class="card-header">
    <h2 class="text-left p-4">Edit Question/Answer</h2>
  </div>
  <br>
  <form id="edit-post-form" class="card-body">
    <input type="hidden" name="post-id" value="{{post.id}}" />
    {{#if canUpdatePost}}
    <label class="form-label my-2" for="post-title">Question</label>
    <input
      type="text"
      name="post-title"
      value="{{post.title}}"
      class="form-control my-2"
    />
    <label class="form-label" for="post-body">Answer</label>
    <textarea
      type="text"
      name="post-body"
      class="form-control"
      rows="10"
    >{{post.body}}</textarea>
    <br />
    <button type="submit" class="btn btn-success mb-2">Update</button>
    <button
      type="button"
      id="delete-btn"
      class="btn btn-danger mb-2"
    >Delete</button>
    {{else}}
    <p class="editPost">You are not authorized to update and delete this Q/A.</p>
        <a class="btn btn-success"
                  href="/dashboard"
                  role="button"
                > ‚Üê Dashboard</a>{{/if}}
  </form>
  <br>
</div>
<br>

<script src="/js/edit.js"></script>